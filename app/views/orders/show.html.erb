<div class="container">

    <h1>注文履歴詳細</h1>

    注文情報
    <table class="table">
        <tbody>
            <tr>
                <th>注文日</th>
                <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
                <th>配送先</th>
                <td>
                    <%= @order.postal_code %> <br>
                    <%= @order.street_address %> <br>
                    <%= @order.name %>
                </td>
            </tr>
            <tr>
                <th>支払方法</th>
                <td>
                    <% if @order.payment_method == 0 %>
                        クレジットカード
                    <% elsif @order.payment_method == 1 %>
                        銀行振り込み
                    <% end %>
                </td>
            </tr>
            <tr>
                <th>ステータス</th>
                <td>
                    <% if @order.order_status == 0 %>
                        入金待ち
                    <% elsif @order.order_status == 1 %>
                        入金確認
                    <% elsif @order.order_status == 2 %>
                        製作中
                    <% elsif @order.order_status == 3 %>
                        発送準備中
                    <% elsif @order.order_status == 4 %>
                        発送済み
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>

    請求情報
    <table class="table">
        <tbody>
            <tr>
                <th>商品合計</th>
                <td><%= @order.total_price %></td>
            </tr>
            <tr>
                <th>配送料</th>
                <td><%= @order.freight %></td>
            </tr>
            <tr>
                <th>ご請求金額</th>
                <td><%= @order.total_price + @order.freight %></td>
            </tr>
        </tbody>
    </table>

    注文内容
    <table class="table">
        <thead>
            <tr>
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @order_details.each do |order_detail| %>
                <tr>
                    <td><%= order_detail.product.name %></td>
                    <td><%= order_detail.price %></td>
                    <td><%= order_detail.quantity %></td>
                    <td><%= order_detail.price * order_detail.quantity %></td>
                </tr>
            <% end %>
        </tbody>
    </table>


</div>