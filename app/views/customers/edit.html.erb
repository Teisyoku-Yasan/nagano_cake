<div class="container">
	<div class="row">
		<h2>登録情報編集</h2>

		<%= form_for(@customer) do |f| %>
		<div class="form-group">
			<%= f.label :氏名 %>
			<div class="row">
				<%= f.text_field :last_name %>
				<%= f.text_field :first_name %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :フリガナ %>
			<div class="row">
				<%= f.text_field :last_name_kana %>
				<%= f.text_field :first_name_kana %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :email, "メールアドレス" %>
			<%= f.email_field :email %>
		</div>

		<div class="form-group">
			<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
			<%= f.text_field :postal_code %>
		</div>

		<div class="form-group">
			<%= f.label :street_address, "住所" %>
			<%= f.text_field :street_address %>
		</div>

		<div class="form-group">
			<%= f.label :phone_num, "電話番号(ハイフンなし)" %>
			<%= f.text_field :phone_num %>
		</div>

		<div class="row">
			<%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>
		</div>
		<% end %>
	</div>

	<div class="col-2 d-flex flex-column align-items-end">
		<%= link_to "退会する" , customers_withdrow_path(@customer), class: "btn btn-danger mt-auto" %>
	</div>
</div>