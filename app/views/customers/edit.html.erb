<div class="container">
	<div class="row">
		<h2>登録情報編集</h2>

		<%= form_for(@customer) do |f| %>
		<div class="form-group">
			<div class="row">
				<div class="col-xs-2">
			        <%= f.label "名前　　　　　　　(姓)" %>
			    </div>
			    <div class="col-xs-3">
				    <%= f.text_field :last_name %><%= f.label "　　　(名)" %>
				</div>
				<div class="col-xs-3">
				    <%= f.text_field :first_name %>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-xs-2">
			        <%= f.label "フリガナ　　　　　(セイ)" %>
			    </div>
			    <div class="col-xs-3">
				    <%= f.text_field :last_name_kana %><%= f.label "　　　(メイ)" %>
				</div>
				<div class="col-xs-3">
				    <%= f.text_field :first_name_kana %>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-xs-2">
			        <%= f.label :email, "メールアドレス" %>
			    </div>
			    <div class="col-xs-3">
				    <%= f.email_field :email %>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-xs-2">
			        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
			    </div>
			    <div class="col-xs-3">
				    <%= f.text_field :postal_code %>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-xs-2">
			        <%= f.label :street_address, "住所" %>
			    </div>
			    <div class="col-xs-3">
				    <%= f.text_field :street_address, class: "col-xs-12" %>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-xs-2">
			        <%= f.label :phone_num, "電話番号(ハイフンなし)" %>
			    </div>
			    <div class="col-xs-3">
				    <%= f.text_field :phone_num %>
				</div>
			</div>
		</div>

		<div class="row">
			<%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
			<%= link_to '退会する', unsubscribe_customer_path, class: "btn btn-danger" %>
		</div>
		<% end %>
	</div>


</div>