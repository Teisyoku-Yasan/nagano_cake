<div class="row">

  <div style="width: 100%;height: 770px;">
    <h2 style="width: 200px;height: 50px;border-radius: 15px;background-color: rgba( 135, 135, 135, 0.55 );font-size: 23px;font-weight: bold;text-align: center;padding-top: 12px;">会員登録ページ</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="col-xs-9">
 
        <div style="padding-top: 20px;"></div>

        <div class="form-group row">
          <%= f.label "名前", class:"col-xs-3" %>
          <%= f.label  :last_name, "(姓)", class:"col-xs-1" %>
          <%= f.text_field :last_name, class:"col-xs-3" %>
          <div class="col-xs-1"></div>
          <%= f.label :first_name, "(名)", class:"col-xs-1" %>
          <%= f.text_field :first_name, class:"col-xs-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "フリガナ", class:"col-xs-3" %>
          <%= f.label :last_name_kana, "(セイ)", class:"col-xs-1" %>
          <%= f.text_field :last_name_kana, class:"col-xs-3" %>
          <div class="col-xs-1"></div>
          <%= f.label :first_name_kana, "(メイ)", class:"col-xs-1" %>
          <%= f.text_field :first_name_kana, class:"col-xs-3" %>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class:"col-xs-3" %>
          <div class="col-xs-1"></div>
          <%= f.email_field :email, class:"col-xs-3" %>
        </div>

        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-xs-3" %>
          <div class="col-xs-1"></div>
          <%= f.text_field :postal_code, class:"col-xs-3" %>
        </div>

        <div class="form-group row">
          <%= f.label :street_address, "住所", class:"col-xs-3" %>
          <div class="col-xs-1"></div>
          <%= f.text_field :street_address, class: "col-xs-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :phone_num, "電話番号(ハイフンなし)", class:"col-xs-3" %>
          <div class="col-xs-1"></div>
            <%= f.text_field :phone_num, class:"col-xs-3" %>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上）
            <% end %>
          </div>
          <div class="col-xs-1"></div>
          <%= f.password_field :password, autocomplete: "new-password", class:"col-xs-3" %>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <%= f.label :password_confirmation %>
          </div>
          <div class="col-xs-1"></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-xs-3" %>
        </div>
      
      </div>

      <div class="col-xs-12">
        <div class="actions" style="padding-top: 20px;">
          <%= f.submit " 新規登録 ", class:"btn btn-success center-block" %>
        </div>
      </div>

    <% end %>
    
    <div class="col-xs-12">
      <h2 style="width: 200px;height: 50px;border-radius: 15px;background-color: rgba( 135, 135, 135, 0.55 );font-size: 23px;font-weight: bold;text-align: center;padding-top: 12px;">既に登録済みの方</h2>
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
      <%# <%= render "customers/shared/links" %>
    </div>


  </div>
</div>