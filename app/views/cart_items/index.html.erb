<div class="container">
	<div class="row">
		<h3>ショッピングカート</h3>

		<%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, data: {confirm: "カートを空にしてもよろしいですか？"}, class: 'btn btn-danger pull-right' %>

		<table class="table table-bordered">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% sum = 0 %>
				<% @cart_items.each do |cart| %>
					<tr>
						<td>
							<%= attachment_image_tag cart.product, :image_id, :fill, 60, 45, format: 'png',fallback: "no_image.png",size:'60x45'  %>
							<%= cart.product.name %>
						</td>
						<td><%= cart.product.syouhizei(cart.product.price) %></td>
						<td>
							<%= form_for cart do |f| %>
								<%= f.number_field :quantity, value: cart.quantity %>
								<%= f.submit '変更', class: "btn btn-primary" %>
							<% end %>
						</td>
						<td><%= cart.subtotal %>円</td>
						<% sum += cart.total.to_i %>
						<td><%= link_to '削除する', cart_item_path(cart), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>

		<div class="col-xs-2 col-xs-offset-10">
			<table class="table table-bordered">
				<tr>
					<th>合計金額</th>
					<td><%= sum.to_s(:delimited) %>円</td>
				</tr>
			</table>
		</div>

		<%= link_to '情報入力に進む', new_order_path, class: "col-xs-2 col-xs-offset-5 btn btn-primary" %>
	</div>
</div>
	
