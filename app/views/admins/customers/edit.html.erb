<div class="row">
    <h1 style="width: 350px;height: 50px;border-radius: 15px;background-color: rgba( 135, 135, 135, 0.55 );font-size: 23px;font-weight: bold;text-align: center;padding-top: 13px;margin-bottom: 20px;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>

    <div class="col-xs-8">
        
        <%= form_for(@customer, url:admins_customer_path) do |f| %>
            <%= render 'layouts/error_messages', object: f.object %>
            
            <div class="form-group row">
                <div class="col-xs-3">
                    <label>会員ID</label>
                </div>
                <div class="col-xs-3">
                    <%= @customer.id %>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label "名前", class:"col-xs-3" %>
                <%# <%= f.label  :last_name, "(姓)", class:"col-xs-1" %>
                <%= f.text_field :last_name, class:"col-xs-3" %>
                <div class="col-xs-1"></div>
                <%# <%= f.label :first_name, "(名)", class:"col-xs-1" %>
                <%= f.text_field :first_name, class:"col-xs-3" %>
            </div>

            <div class="form-group row">
                <%= f.label "フリガナ", class:"col-xs-3" %>
                <%# <%= f.label :last_name_kana, "(セイ)", class:"col-xs-1" %>
                <%= f.text_field :last_name_kana, class:"col-xs-3" %>
                <div class="col-xs-1"></div>
                <%# <%= f.label :first_name_kana, "(メイ)", class:"col-xs-1" %>
                <%= f.text_field :first_name_kana, class:"col-xs-3" %>
            </div>

            <div class="form-group row">
                <%= f.label :email, "メールアドレス", class:"col-xs-3" %>
                <%# <div class="col-xs-1"></div> %>
                <%= f.email_field :email, class:"col-xs-3" %>
            </div>

            <div class="form-group row">
                <%= f.label :postal_code, "郵便番号", class:"col-xs-3" %>
                <%# <div class="col-xs-1"></div> %>
                <%= f.text_field :postal_code, class:"col-xs-3" %>
            </div>

            <div class="form-group row">
                <%= f.label :street_address, "住所", class:"col-xs-3" %>
                <%# <div class="col-xs-1"></div> %>
                <%= f.text_field :street_address, class: "col-xs-7" %>
            </div>

            <div class="form-group row">
                <%= f.label :phone_num, "電話番号", class:"col-xs-3" %>
                <%# <div class="col-xs-1"></div> %>
                <%= f.text_field :phone_num, class:"col-xs-3" %>
            </div>

            <div style="padding-top: 20px;"></div>

            <div class="form-group row">
                <div class="col-xs-3">
                    <label>会員ステータス</label>
                </div>
                <div class="col-xs-3">
                    <%= f.radio_button :is_deleted, :false %> <%= f.label :is_deleted, "有効", value: false %>
                    <%= f.radio_button :is_deleted, :true %> <%= f.label :is_deleted, "退会済み", value: true %>
                </div>
            </div>
            <div style="height: 80px;">
            <%= f.submit "変更を保存する", class:"btn btn-primary" %>
            </div>
        <% end %>

    </div>


</div>