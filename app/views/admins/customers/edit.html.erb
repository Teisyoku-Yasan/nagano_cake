<div class="container">

    <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>



    会員ID　<%= @customer.id %>


    <%= form_for(@customer, url:admins_customer_path ) do |f| %>

        <div class="form-group">
            氏名
            <%= f.text_field :last_name, class:"form-control" %>
            <%= f.text_field :first_name, class:"form-control" %>
        </div>

        <div class="form-group">
            フリガナ
            <%= f.text_field :last_name_kana, class:"form-control" %>
            <%= f.text_field :first_name_kana, class:"form-control" %>
        </div>

        
        <div class="form-group">
            郵便番号
            <%= f.text_field :postal_code, class:"form-control" %>
        </div>

        <div class="form-group">
            住所
            <%= f.text_field :street_address, class:"form-control" %>
        </div>

        <div class="form-group">
            電話番号
            <%= f.text_field :phone_num, class:"form-control" %>
        </div>

        
        <div class="form-group">
            メールアドレス
            <%= f.text_field :email, class:"form-control" %>
        </div>

        <div class="form-group">
            会員ステータス
            <%= f.radio_button :is_deleted, :false %> <%= f.label :is_deleted, "有効", value: false %>
            <%= f.radio_button :is_deleted, :true %> <%= f.label :is_deleted, "退会済み", value: true %>
        </div>
        
        <%= f.submit "変更を保存する", class:"btn btn-primary" %>

    <% end %>



</div>