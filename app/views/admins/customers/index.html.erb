<div class="container">


    <h1>会員一覧</h1>

    <table class="table">
        <thead>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </thead>

        <tbody>
            <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.id %></td>
                    <td>
                        <%= link_to admins_customer_path(customer) do %>
                        <%= customer.last_name %> <%= customer.first_name %>
                        <% end %>
                    </td>
                    <td><%= customer.email %></td>
                    <td>
                        <% if customer.is_deleted == true %>
                            退会済    
                        <% else %>
                            有効
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>

    <%= paginate @customers %>



</div>