<div class="container">

    <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>

    <div class="field">
        顧客ID
        <%= @customer.id %> 
            <% if @customer.is_deleted == true %>
                退会済会員
            <% else %>
                有効会員
            <% end %>
    </div>
    
    <div class="field">
        氏名
        <%= @customer.last_name %> <%= @customer.first_name %>
    </div>
    
    <div class="field">
        フリガナ
        <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
    </div>
    
    <div class="field">
        郵便番号
        <%= @customer.postal_code %>
    
    <div class="field">
        住所
        <%= @customer.street_address %>
    </div>
    
    <div class="field">
        電話番号
        <%= @customer.phone_num %>
    </div>
    
    <div class="field">
        メールアドレス
        <%= @customer.email %>
    </div>


    <%= link_to "編集する", edit_admins_customer_path(@customer), class:"btn btn-primary" %>
    <%# リンク先に「order_sort」の「1」と、現在いるページの「customer_id」の値を一緒に送る / この会員の注文履歴だけ見られる %>
    <%= link_to "注文履歴一覧を見る", admins_orders_path(order_sort: 0, customer_id: @customer.id), class:"btn btn-primary" %>

</div>