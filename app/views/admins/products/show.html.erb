<div class="container">
	<div class="row">
		<h3>商品詳細</h3>
		<div class="col-xs-4">
			<%= attachment_image_tag @product, :image, :fill, 300, 250, format:'jpeg' %>
		</div>
		<div class="col-xs-7">
			<table class="table">
				<tbody>
					<tr>
						<td>商品名</td>
						<td><%= @product.name %></td>
					</tr>

					<tr>
						<td>商品説明</td>
						<td><%= @product.introduction %></td>
					</tr>

					<tr>
						<td>ジャンル</td>
						<td><%= @product.genre.name %></td>
					</tr>

					<tr>
						<td>税込価格（税抜価格）</td>
						<td><%= "#{(@product.price * 1.1).round }" %>(<%= "#{@product.price}円" %>)円</td>
					</tr>

					<tr>
						<td>販売ステータス</td>
						<td><%= @product.is_active ? "販売中" : "販売停止中" %></td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="col-xs-1">
			<%= link_to "編集する", edit_admins_product_path(@product.id), class:"btn btn-primary btn-new-register btn-lg" %>
		</div>
	</div>
</div>

