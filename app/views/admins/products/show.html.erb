<div class="container">
	<div class="row">
		<h2>商品詳細</h2>
		<div class="col-xs-4">
			<%= attachment_image_tag @product, :product_image, :fill, 300, 230, format:'jpeg' %>
		</div>
		<div class="col-xs-4">
			<h4>商品名</h4>
			<div class="text"><%= @product.name %></div>
			<h4>商品説明</h4>
			<div class="text"><%= @product.introduction %></div>
			<h4>ジャンル</h4>
			<div class="text"><%= @product.genre.name %></div>
			<h4>税込価格（税抜価格）</h4>
			<div class="text"><%= converting_to_jpy(@product.price*1.1) %>(<%= converting_to_jpy(@product.price) %>)円</div>
			<h4>販売ステータス</h4>
			<div class="text"><%= @product.is_active %></div>
		</div>
		<div class="col-xs-4">
			<%= link_to "編集する", edit_admins_product_path(@product.id), class:"btn btn-danger btn-sm" %>
		</div>
	</div>
</div>

