<div class="container">
	<div class="row">
		<div class="col-xs-12">
		  <div style="width: 100%;height: 164px;"></div>
		  <div style="height: 635px;">
			<div style="width:140px;height:50px;border-radius: 15px;background-color: rgba( 135, 135, 135, 0.55 );font-size: 23px;font-weight: bold;text-align: center;padding-top: 9px;">商品一覧</div>

			<div class="new-btn-wrap" style="margin-top: 40px;">
				<%= link_to "商品登録", new_admins_product_path, class: "btn btn-primary btn-new-register btn-lg"; %>
			</div>

			<table class="table" style="margin-top: 50px;padding-left: 10px;">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @products.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td><%= link_to product.name, admins_product_path(product.id) %></td>
						<td><%= product.price.to_s(:delimited) %></td>
						<td><%= product.genre.name %></td>
						<td><%= product.is_active ? "販売中" : "販売停止中" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<%= paginate @products %>
		    </div>
		</div>
	</div>
</div>