<div class="row">

	<h3 style="width: 250px;height: 50px;background-color: rgba( 135, 135, 135, 0.55 );border-radius: 15px;text-align: center;font-size:23px;font-weight: bold;padding-top: 13px;">ジャンル一覧・追加</h3>
	
	<div class="col-xs-7">
		<label style="margin-top: 50px;">ジャンル</label>
		<%= form_for @genre, url: admins_genres_path do |f| %>
			<%= render 'layouts/error_messages', object: f.object %>

			<%= f.text_field :name %>
			<%= f.radio_button :is_active, true, {:checked => true} %>
			<%= f.label :is_active, "有効", :value => "true" %>
			<%= f.radio_button :is_active, false %>
			<%= f.label :is_active, "無効", :value => "false" %>
			<%= f.submit '追加', class:"btn btn-primary" %>
		<% end %>
	</div>
	

	<div class="col-xs-7">

		<div style="padding-bottom: 50px;"></div>

		<table class="table">
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
			<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td>
						<% if genre.is_active == false %>
							無効
						<% else %>
							有効
						<% end %>
					</td>
					<td><%= link_to "編集する", edit_admins_genre_path(genre), class:"btn btn-primary" %></td>
				</tr>
			<% end %>
		</table>
		
	</div>

</div>