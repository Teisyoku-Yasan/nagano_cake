<div class="row">

	<h2 style="width: 170px;height: 50px;border-radius: 15px; background-color: rgba( 135, 135, 135, 0.55 );text-align: center;font-size: 23px;font-weight: bold;padding-top: 13px;">ジャンル編集</h2>
	
	<div style="height: 300px">
	    <label>ジャンル</label>
		<%= form_for @genre, url: admins_genre_path(@genre) do |f| %>
			<%= render 'layouts/error_messages', object: f.object %>

			<%= f.text_field :name %>
			<% if @genre.is_active == false %>
				<%= f.radio_button :is_active, true %>
				<%= f.label :is_active, "有効", :value => "true" %>
				<%= f.radio_button :is_active, false, {:checked => true} %>
				<%= f.label :is_active, "無効", :value => "false" %>
			<% else %>
				<%= f.radio_button :is_active, true, {:checked => true} %>
				<%= f.label :is_active, "有効", :value => "true" %>
				<%= f.radio_button :is_active, false %>
				<%= f.label :is_active, "無効", :value => "false" %>
			<% end %>
			<%= f.submit '変更を保存する',class:"btn btn-primary"  %>
		<% end %>
    </div>
</div>